<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite parallel="none" name="NopCommerce" >

    <listeners>
        <listener class-name="commons.MethodListener"/>
        <listener class-name="jiraConfigs.JiraListener"/>
    </listeners>

    <parameter name="adminUrl" value="http://demo.nopcommerce/login?ReturnUrl=%2Fadmin"/>
    <parameter name="userUrl" value="http://demo.nopcommerce"/>

    <test name="Run on Firefox Headless" preserve-order="true">
        <parameter name="browser" value="hfirefox"/>
        <classes>
            <class name="com.nopcommerce.account.Level_24_Browser_Config"/>
        </classes>
    </test>

    <test name="Run on Chrome Headless" preserve-order="true">
        <parameter name="browser" value="hchrome"/>
        <classes>
            <class name="com.nopcommerce.account.Level_24_Browser_Config"/>
        </classes>
    </test>

    <test name="Run on Edge Headless" preserve-order="true">
        <parameter name="browser" value="hedge"/>
        <classes>
            <class name="com.nopcommerce.account.Level_24_Browser_Config"/>
        </classes>
    </test>

</suite>